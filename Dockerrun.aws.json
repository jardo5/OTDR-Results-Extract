{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "backend",
      "build": {
        "context": "./backend",
        "dockerfile": "Dockerfile"
      },
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000
        }
      ]
    },
    {
      "name": "frontend",
      "build": {
        "context": "./frontend",
        "dockerfile": "Dockerfile"
      },
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "links": ["backend"]
    }
  ]
}
